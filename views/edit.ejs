<%- include('./partials/header.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Update Students</h2>
                <form method="post" action="/update/<%= data._id %>">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Your Name"
                            value="<%= data.name %>" />
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" name="age" placeholder="Enter Your Age"
                            value="<%= data.age %>" />
                    </div>
                    <div class="mb-3">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" class="form-control" id="fees" name="fees" placeholder="Enter Your Fees"
                            value="<%= data.fees %>" />
                    </div>
                    <button class="btn btn-primary" type="submit">Update</button>
                    <form action="/" class="mt-2">
                        <button class="btn btn-secondary" type="submit">back</button>
                    </form>
                </form>
            </div>

        </div>
    </div>

    <%- include('./partials/footer.ejs') %>